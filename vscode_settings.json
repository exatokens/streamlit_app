            "editor.lineHighlightBackground": "#292929",
            "editorCursor.foreground": "#FFD700",
            "editorInlayHint.foreground": "#808080"
        }
    },
    "files.autoSave": "onFocusChange",
    "editor.dropIntoEditor.preferences": [

    ]
